<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/activity_maps"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.govelapp.govelapp.MapsActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <AutoCompleteTextView
        android:background="@drawable/round_search_bar"
        android:hint="@string/search_bar_hint"
        android:id="@+id/searchBar"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_width="259dp"
        android:textColorHint="@color/cast_expanded_controller_background_color" />

    <LinearLayout
        android:background="@drawable/round_search_bar"
        android:gravity="bottom"
        android:id="@+id/right_drawer_layout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="205dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="10">

        <ListView
            android:id="@+id/linear_drawer_list"
            android:layout_height="205dp"
            android:layout_width="match_parent" />

    </LinearLayout>

    <!--MAP-->
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchBar"
        tools:context="com.govelapp.govelapp.MapsActivity"
        tools:layout="@layout/activity_maps" />

</RelativeLayout>

